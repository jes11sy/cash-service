# Database
DATABASE_URL="postgresql://user:password@localhost:5432/cash_db?schema=public"

# JWT Authentication (CRITICAL: Use strong secret in production!)
# Generate with: openssl rand -base64 64
JWT_SECRET="your-super-secure-jwt-secret-at-least-32-characters-long-change-this-in-production"

# Server
PORT=5006
NODE_ENV=development

# Logging
LOG_LEVEL=info

# CORS (Comma-separated list of allowed origins)
# Production: "https://yourdomain.com,https://app.yourdomain.com"
# Development: "http://localhost:3000,http://localhost:3001"
CORS_ORIGIN="http://localhost:3000"

# Security
# Enable in production for HTTPS
# HSTS_MAX_AGE=31536000

